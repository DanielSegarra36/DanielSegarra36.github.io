<script>
  gsap.registerPlugin(ScrollTrigger);

  // GSAP fade in all .right items from right
  gsap.utils.toArray(".right").forEach((right) => {
    gsap.from(right, {
      scrollTrigger: {
        trigger: right,
        start: "top 100%",
        end: "bottom bottom",
        toggleActions: "restart none none none", // Restart the animation when the trigger enters the viewport
      },
      x: 100,
      opacity: 0,
      duration: 1,
    });
  });
  gsap.utils.toArray(".left").forEach((left) => {
    gsap.from(left, {
      scrollTrigger: {
        trigger: left,
        start: "top 100%",
        end: "bottom bottom",
        toggleActions: "restart none none none", // Restart the animation when the trigger enters the viewport
      },
      x: -100,
      opacity: 0,
      duration: 1,
    });
  });
</script>
