import Project from "../components/Project.astro";
---

<SinglePageLayout title="Portfolio">
  <div id="projects">
    <!-- <Project link="" title="" /> -->
    <Project
      link="https://sumaryzethat.danielsegarra.dev/"
      title="Sumaryze That!"
    />
    <Project link="https://danielsegarra.dev/Yahtzee" title="Yahtzee" />
    <Project
      link="https://danielsegarra.dev/throwingAxeMenuAnimation"
      title="Throwing Axe Menu Animation (SVG Transformations)"
    />
    <Project
      link="https://danielsegarra.dev/CFFG2PB"
      title="Brand to App Logo (SVG Transformations)"
    />
    <Project link="#" title="OGalaga" />
